# Python 3.11 베이스 이미지
FROM python:3.11

# 필수 패키지 설치 (Playwright와 함께 동작하기 위해 필요한 라이브러리들)
RUN apt-get update && apt-get install -y \
    libnss3 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libxcomposite1 \
    libxrandr2 \
    libxdamage1 \
    libpango-1.0-0 \
    libcairo2 \
    libasound2 \
    libx11-xcb1 \
    libxshmfence1 \
    libgbm1 \
    libxkbcommon0 \
    wget \
    unzip \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Python 종속성 설치
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Playwright 브라우저 설치 및 캐시 디렉토리 변경
ENV PLAYWRIGHT_BROWSERS_PATH=/root/.cache/ms-playwright
RUN mkdir -p /root/.cache/ms-playwright && chmod -R 777 /root/.cache/ms-playwright
RUN playwright install --with-deps

# PYTHONPATH 설정
ENV PYTHONPATH=/app

# 작업 디렉토리 설정
WORKDIR /app

# 프로젝트 파일 복사
COPY . .

# Playwright가 설치된 브라우저 경로 지정
ENV PLAYWRIGHT_BROWSERS_PATH=/root/.cache/ms-playwright

# 크롬 실행 시 추가로 --no-sandbox 옵션을 사용하여 Playwright에서 크롬 실행
CMD ["python3", "/app/app/data_upload/crawl_update_daily_data.py"]
