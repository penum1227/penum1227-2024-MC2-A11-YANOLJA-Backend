FROM python:3.11

# Set working directory
WORKDIR /app

# 필수 패키지 및 헤드리스 Chrome 설치 (현재 버전: 129.0.6668.90)
RUN apt-get update && apt-get install -y wget gnupg2 unzip \
    libx11-xcb1 libxcomposite1 libxcursor1 libxdamage1 libxi6 libxtst6 \
    libnss3 libnss3-dev libxrandr2 libasound2 libpangocairo-1.0-0 libatk1.0-0 libatk-bridge2.0-0 libgtk-3-0 \
    && wget -q -O - https://dl.google.com/linux/linux_signing_key.pub | apt-key add - \
    && sh -c 'echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google-chrome.list' \
    && apt-get update && apt-get install -y google-chrome-stable=129.0.6668.90-1 \
    && apt-get clean

# Selenium의 cache 폴더 권한 문제 해결 (경로 변경)
RUN mkdir -p /root/.cache/selenium && chmod -R 777 /root/.cache/selenium

# Python 종속성 설치
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 환경 변수 설정
ENV PYTHONPATH=/app

# 프로젝트 파일 복사
COPY . .

# 스크립트 실행
CMD ["python3", "/app/app/data_upload/crawl_update_daily_data.py"]
